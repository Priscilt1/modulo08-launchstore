{% extends 'layout.njk' %}
{% import 'parts/card.njk' as card %}

{% block content %}

    {% call card.render('Editar Produto', 'product-create container')%}
    <form action="/products?_method=PUT" method="post" enctype="multipart/form-data">
    
        <div class="fields">
            {% include 'products/fields.njk'%}
            <input type="hidden" name="id" value={{product.id}}>
        </div>

        <button class="button edit" type="submit">Atualizar</button>

    </form>

    <form id="form-delete" action="/products?_method=DELETE" method="post">
        <input type="hidden" name="id" value={{product.id}}>
        <button class="button delete" type="submit">Deletar</button>
    </form>

    <script src="/mensagedelet.js"></script>

    {% endcall %}
{% endblock content %}