{% extends 'layout.njk' %}
{% import 'parts/card.njk' as card %}

{% block content %}

    {% call card.render('Esqueceu a senha?', 'password container')%}
        <form action="/users/forgot-password" method="post">

            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class='input'>
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="Digite o email cadastrado" 
                            value="{{ user.email }}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >  {# onblur Ã© quando sai do campo especifico no formulario #}
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Recuperar senha</button>
        </form>
    {% endcall %}

{% endblock content %}