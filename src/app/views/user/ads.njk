{% extends "layout.njk" %}
{% import 'parts/card.njk' as cards %}

{% block content %}

{# chamando atras do call o caller(no card.njk) e as classes  #}
{%call cards.render('Meus Anúncios', 'users-ads container')%}
    <div class="items">
        {% for product in products %}
            <div class="item">
                <div class="image"
                    style='background-image: url{{ åproduct.img }}'
                >
                </div>

                <div class="info">
                    <div class="title">{{product.name}}</div>
                    <div class="price">{{product.formattedPrice}}</div>
                    <div class="published">Publicado em {{product.formattedCreatedAt}}</div>
                </div>

                <div class="actions">
                    <a href="/products/{{product.id}}/edit">Editar</a>
                    <a href="/products/{{product.id}}/edit">Ver</a>
                </div>
            </div>
        {% endfor %}
    </div>
{%endcall%}

{% endblock content %}